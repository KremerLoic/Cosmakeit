<form method="get"
      action="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}"
      class="">
    <div class="row d-flex justify-content-center col-12">

        <div class="col-md-8 col-sm-6">
            <div class="column" id="searchbarTextField">
                {% for filter in products.definition.enabledFilters %}
                    <div class="field"><input id="criteria_search_value" class="form-control" name="criteria[search][value]" type="text"></div>
                {% endfor %}
            </div>
        </div>

        <button type="submit" class="lezada-button lezada-button--small ml-10"> {{ 'sylius.ui.search'|trans }}</button>
        <a href="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}"
           class="lezada-button lezada-button--small ml-10">
            {{ 'sylius.ui.clear'|trans }}
        </a>

    </div>

</form>



