<div class="login-area mb-130 mb-md-70 mb-sm-70 mb-xs-70 mb-xxs-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-md-50 mb-sm-50">

                <div class="col-lg-12">

                    <h4 class="ui dividing header">{{ 'sylius.ui.personal_information'|trans }}</h4>
                </div>
                <div class="col-lg-12 mb-20">

                    {{ form_row(form.firstName, {'attr': {'class': 'loginForm'  }}) }}
                </div>
                <div class="col-lg-12 mb-20">
                    {{ form_row(form.lastName, {'attr': {'class': 'loginForm'  }}) }}
                </div>
                <div class="col-lg-12 mb-20">
                    {{ form_row(form.email, {  'attr': {'class': 'loginForm'  }}) }}
                </div>
                <div class="col-lg-12 mb-20">
                    {{ form_row(form.preference, {  'attr': {'class': 'loginForm'  }}) }}
                </div>
                <div class="col-lg-12 mb-20">
                    {{ form_row(form.phoneNumber, {'attr': {'class': 'loginForm'  }}) }}
                </div>
            </div>
            <div class="col-lg-6 mb-md-50 mb-sm-50">
                <h4 class="ui dividing header">{{ 'sylius.ui.account_credentials'|trans }}</h4>
                <div class="col-lg-12 mb-20">
                    {{ form_row(form.user.plainPassword.first, {'attr': {'class': 'loginForm'   }}) }}
                </div>
                <div class="col-lg-12 mb-150">
                    {{ form_row(form.user.plainPassword.second, {'attr': {'class': 'loginForm'  }}) }}
                </div>
                <div class="col-lg-12 mb-20 center-button">
                    <button type="submit" class="lezada-button lezada-button--large">
                        {{ 'sylius.ui.create_an_account'|trans }}
                    </button>
                    </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


