<div class="login-area mb-30 ">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class=" col-lg-6  ">



                    {{ form_row(form.firstName, {'attr': {'class': 'formClass'}}) }}
                    {{ form_row(form.lastName, {'attr': {'class': 'formClass'}}) }}

                {{ form_row(form.company, {'attr': {'class': 'formClass'}}) }}
                {{ form_row(form.street, {'attr': {'class': 'formClass'}}) }}
                {{ form_row(form.countryCode, {'attr': {'class': ' mt-20 formClass'}}) }}
                <div class="province-container field" data-url="{{ path('sylius_admin_ajax_render_province_form') }}">
                    {% if form.provinceCode is defined %}
                        {{ form_row(form.provinceCode, {'attr': {'class': 'formClass'}}) }}
                    {% endif %}
                </div>
                    {{ form_row(form.city, {'attr': {'class': 'formClass'}}) }}
                    {{ form_row(form.postcode, {'attr': {'class': 'formClass'}}) }}

                {{ form_row(form.phoneNumber, {'attr': {'class': 'formClass'}}) }}

            </div>
        </div>
    </div>
</div>
