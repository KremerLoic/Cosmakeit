{% set ancestors = taxon.ancestors|reverse %}


<div class="breadcrumb-area breadcrumb-bg-2 pt-50 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="breadcrumb-title">{{ taxon.name }}</h1>
                <ul class="breadcrumb-list">
                    <a href="{{ path('sylius_shop_homepage') }}">
                        <li class="breadcrumb-list__item">{{ 'sylius.ui.home'|trans|upper }}</li>
                    </a>
                    <!--=======  breadcrumb list  =======-->
                    {% for ancestor in ancestors %}
                        {% if ancestor.isRoot() %}
                            <li class="breadcrumb-list__item">{{ ancestor.name }}</li>
                        {% else %}
                            <a href="{{ path('sylius_shop_product_index', {'slug': ancestor.slug, '_locale': ancestor.translation.locale}) }}"
                               class="breadcrumb-list__item">{{ ancestor.name }}</a>
                        {% endif %}
                    {% endfor %}
                    <li class="breadcrumb-list__item breadcrumb-list__item--active">{{ taxon.name }}</li>
                </ul>
            </div>
        </div>
    </div>
</div>