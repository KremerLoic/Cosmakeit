{% if app.user is not empty and app.user.customer is not empty and app.user.customer.addresses|length > 0 %}
    <div class="row">
        <div class="col-12 mb-20">
            <div class="check-box">
                <input type="checkbox" id="billing_address" data-billing>
                <label for="billing_address" class="text">{{ 'sylius.ui.select_address_from_book'|trans }}</label>
            </div>
        </div>



        <div id="billing-form" class="mb-40 col-12">

            <div class="ui fluid floating dropdown labeled search icon button address-book-select">
                <div class="menu">
                    {% for address in app.user.customer.addresses %}

                        <div class="item"
                             data-id="{{ address.id }}"
                             data-first-name="{{ address.firstName }}"
                             data-last-name="{{ address.lastName }}"
                             data-company="{{ address.company }}"
                             data-street="{{ address.street }}"
                             data-country-code="{{ address.countryCode }}"
                             data-province-code="{{ address.provinceCode }}"
                             data-province-name="{{ address.provinceName }}"
                             data-city="{{ address.city }}"
                             data-postcode="{{ address.postcode }}"
                             data-phone-number="{{ address.phoneNumber }}"
                        >
                            <strong>{{ address.firstName }} {{ address.lastName }}</strong>, {{ address.street }}
                            , {{ address.city }} {{ address.postcode }}, {{ address.countryCode|sylius_country_name }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endif %}
