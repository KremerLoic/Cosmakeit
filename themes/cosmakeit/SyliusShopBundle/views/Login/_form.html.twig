{% import '@SyliusUi/Macro/messages.html.twig' as messages %}

{% if last_error %}
    {{ messages.error(last_error.messageKey|trans(last_error.messageData, 'security')) }}
{% endif %}

<div class="row">
    <div class="col-lg-12">
        <!--=======  login title  =======-->

        <div class="section-title section-title--login text-center mb-50">
            <h2 class="mb-20">Login</h2>
            <p>Great to have you back!</p>
        </div>

        <!--=======  End of login title  =======-->
    </div>
    <div class="col-lg-12 mb-60">

        {{ form_row(form._username, {'label':false , 'attr': {'class': 'loginForm' , 'placeholder': 'Username'  }}) }}
    </div>
    <div class="col-lg-12 mb-60">
        {{ form_row(form._password, {'label':false , 'attr': {'class': 'loginForm' , 'placeholder': 'Password'  }}) }}
    </div>
    <div class="col-lg-12 text-center mb-30">
        <button type="submit" class="lezada-button lezada-button--medium">{{ 'sylius.ui.login'|trans }}</button>
    </div>


    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form._remember_me) }}
            </div>
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">
                <span>Login with Facebook</span>
            </a>
        </div>
    </div>
</div>
