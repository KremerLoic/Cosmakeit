{% extends '@SyliusShop/Account/layout.html.twig' %}

{% form_theme form '@SyliusShop/Form/theme.html.twig' %}

{% block breadcrumb %}

    <div class="breadcrumb-area breadcrumb-bg-2 pt-50 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="breadcrumb-title">{{ 'sylius.ui.change_password'|trans }}</h1>
                    <ul class="breadcrumb-list">

                        <a href="{{ path('sylius_shop_homepage') }}">
                            <li class="breadcrumb-list__item">{{ 'sylius.ui.home'|trans|upper }}</li>
                        </a>
                        <!--=======  breadcrumb list  =======-->
                        <li class="breadcrumb-list__item breadcrumb-list__item--active">{{ 'sylius.ui.change_password'|trans }}</li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block subcontent %}
<div class="ui segment">
    {{ form_start(form, {'action': path('sylius_shop_account_change_password'), 'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}) }}
    <div class="text-center mt-40 mb-60">

        <h1>{{ 'sylius.ui.set_a_new_password_for_your_account'|trans }}</h1>
    </div>

    {{ sonata_block_render_event('sylius.shop.account.change_password.after_content_header', {'form': form}) }}
    <div class="login-area mb-130 mb-md-70 mb-sm-70 mb-xs-70 mb-xxs-70 ">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class=" col-lg-6 mb-md-50 mb-sm-50 ">
                    {{ form_row(form.currentPassword, {'attr': {'class': 'formClass'}}) }}
                    {{ form_row(form.newPassword.first, {'attr': {'class': 'formClass'}}) }}
                    {{ form_row(form.newPassword.second, {'attr': {'class': 'formClass'}}) }}

                    {{ sonata_block_render_event('sylius.shop.account.change_password.form', {'form': form}) }}
                    <div class="mb-20 mt-20 text-center">
                    <button type="submit" class="lezada-button lezada-button--large">{{ 'sylius.ui.save_changes'|trans }}</button>
                    </div>
                    {{ form_row(form._token) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
                {% endblock %}
